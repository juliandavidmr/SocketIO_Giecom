<!doctype html>
<html lang="en">
    <%- include ../partials/header %>
    <body>

        <div class="wrapper">
            <%- include('../partials/sidemenu', {activo: 'table'}) %>
            <div class="main-panel">
                <%- include ../partials/nav %>
                <div class="content">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Striped Table with Hover</h4>
                                        <p class="category">Here is a subtitle for this table</p>
                                    </div>
                                    <div class="content table-responsive table-full-width">
                                        <table class="table table-hover table-striped">
                                            <thead>
                                                <th>#</th>
                                                <th>Nombre</th>
                                                <th>Referencia</th>
                                                <th>Descripcion</th>
                                                <th>Maximo</th>
                                                <th>Minimo</th>
                                                <th>Altura</th>
                                            </thead>
                                            <tbody>
                                                <% for (var i = 0; i < sensores.length; i++) {  %>
                                                    <tr>
                                                        <td><%= (i+1) %></td>
                                                        <td><%= sensores[i].NombreSensor %></td>
                                                        <td><%= sensores[i].Referencia %></td>
                                                        <td><%= sensores[i].Descripcion %></td>
                                                        <td><%= sensores[i].Maximo %></td>
                                                        <td><%= sensores[i].Minimo %></td>
                                                        <td><%= sensores[i].Altura %></td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <%- include ../partials/footer %>

            </div>
        </div>

    </body>
    <%- include ../partials/scripts %>
</html>
